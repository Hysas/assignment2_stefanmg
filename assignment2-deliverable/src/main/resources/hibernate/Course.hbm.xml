<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="no.uio.inf5750.assignment2.model.Course" table="course">
		<meta attribute="class-description">
			This class contains the course details.
		</meta>
		
		<id name="id">
			<generator class="native" />
		</id>
		
		<property name="courseCode" type="string" not-null="true" unique="true"/>
		<property name="name" type="string" not-null="true" unique="true"/>
		
		<set name="attendants" table="course_attendants" cascade="save-update">
			<key column="course_id"/>
			<many-to-many column="student_id" class="no.uio.inf5750.assignment2.model.Student"/>
		</set>	
	</class>
</hibernate-mapping>