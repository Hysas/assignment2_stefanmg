<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="no.uio.inf5750.assignment2.model.Degree" table="degree">
		<meta attribute="class-description">
			This class contains the degree details.
		</meta>

		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		
		<property name="type" type="string" not-null="true" unique="true"/>
		
		<set name="requiredCourses" table="degree_courses">
			<key column="degree_id"/>
			<many-to-many column="course_id" class="no.uio.inf5750.assignment2.model.Course"/>
		</set>			
	</class>
</hibernate-mapping>