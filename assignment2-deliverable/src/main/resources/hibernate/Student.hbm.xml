<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="no.uio.inf5750.assignment2.model.Student" table="student">
		<meta attribute="class-description">
			This class contains the student details.
		</meta>

		<id name="id">
			<generator class="native" />
		</id>
		
		<property name="name" type="string" not-null="true" unique="true" />

		<set name="courses" table="student_courses" cascade="save-update">
			<key column="student_id" />
			<many-to-many column="course_id" class="no.uio.inf5750.assignment2.model.Course" />
		</set>
		
		<set name="degrees" table="student_degrees" cascade="save-update">
			<key column="student_id" />
			<many-to-many column="degree_id" class="no.uio.inf5750.assignment2.model.Degree" />
		</set>
	</class>
</hibernate-mapping>